<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
      <%# pluralizeで、errorとerrorsを正しく変更してくれる %>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |err|%>
        <li><%= err %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div>errorないよ</div>
<% end %>